[MASTER]
# Allow Pylint to discover imports across modern project structures
ignore=venv,env,build,dist,.git,__pycache__
extension-pkg-whitelist=
persistent=yes
load-plugins=pylint.extensions.docparams,pylint.extensions.typing

[MESSAGES CONTROL]
# Disable noisy false positives and irrelevant warnings
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    too-many-instance-attributes,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    duplicate-code,
    broad-except,
    no-name-in-module,
    import-error,
    invalid-name,
    fixme

[TYPECHECK]
# Pylint struggles with dynamically generated modules like pinecone, openai, etc.
ignored-modules=
    pinecone,
    openai,
    tiktoken,
    requests,
    httpx,
    dotenv

[FORMAT]
# Standard PEP8 layout rules
max-line-length=100
indent-string='    '
expected-line-ending-format=LF

[BASIC]
# Variable name rules
good-names=i,j,k,x,y,z,_,id,db,pc
bad-names=foo,bar,baz
allow-global-unused-variables=yes

[REPORTS]
# Simplify output
output-format=colorized
reports=no
score=yes

[DESIGN]
# Reasonable design limits
max-args=10
max-attributes=12
max-branches=15
max-locals=25
max-statements=75

[SIMILARITIES]
# Ignore duplicates in tests
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[LOGGING]
# Allow f-strings in logging
logging-format-style=old

[EXCEPTIONS]
overgeneral-exceptions=Exception
